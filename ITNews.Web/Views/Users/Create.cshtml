@model ITNews.Web.ViewModels.Users.CreateUserViewModel
@{
    ViewData["Title"] = "Create User";
}

<form method="post" asp-controller="Users" asp-action="Create">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <div class="form-group">
            <input type="text" placeholder="User Name" asp-for="UserName" class="form-control" required />
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
            <input type="email" placeholder="Email" asp-for="EmailAddress" class="form-control" required />
            <span asp-validation-for="EmailAddress"></span>
        </div>
        <div class="form-group">
            <input type="text" placeholder="First Name" asp-for="FirstName" class="form-control" required />
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group">
            <input type="text" placeholder="Last Name" asp-for="LastName" class="form-control" required />
            <span asp-validation-for="LastName"></span>
        </div>
        <div class="form-group">
            <input type="password" placeholder="Password" asp-for="Password" class="form-control" required />
            <span asp-validation-for="Password"></span>
        </div>
    </div>
    <div>
        <input type="submit" class="btn btn-success btn-block btn-lg" value="Create" />
    </div>
</form>
