@model IEnumerable<ITNews.Core.Domain.User>
@{
    ViewData["Title"] = "Users List";
}

<a asp-action="Create">Add User</a>

<table class="table">
    <tr>
        <th>UserName</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Description</th>
        <th>Lives</th>
        <th>From</th>
        <th>Work At</th>
    </tr>

    @foreach(var user in Model)
    {
    <tr>
        <td>@user.UserName</td>
        <td>@user.FirstName</td>
        <td>@user.LastName</td>
        <td>@user.Email</td>
        <td>@user.Description</td>
        <td>@user.Lives</td>
        <td>@user.From</td>
        <td>@user.WorkAt</td>
        
        <td>
            <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Change Password</a>
                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
            </form>
        </td>
    </tr>
    }
</table>

