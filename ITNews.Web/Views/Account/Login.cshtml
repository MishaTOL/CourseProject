@model ITNews.Web.ViewModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="form">
    <h2>Login into your account</h2>
    <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <div class="form-group">
                <input type="text" placeholder="UserName" asp-for="UserName" class="form-control" required />
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="form-group">
                <input type="password" placeholder="Password" asp-for="Password" class="form-control" required />
                <span asp-validation-for="Password"></span>
            </div>          
        </div>
        <div class="form-group">
            <input type="checkbox" asp-for="RememberMe"/>
            <label asp-for="RememberMe">
                <span>Remember Me?</span>
            </label>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-success btn-lg btn-block" value="Login"/>
        </div>
    </form>

    <div class="text-center">
        <p>Not a member yet? <a asp-action="Register">Register</a></p>
    </div>
</div>

